#
# Check running processes.
#
command[check_postgresql]={{ hm_monitored__plugins_dir }}/check_procs -c {{ hm_pgsql__procs_mincnt }}:{{ hm_pgsql__procs_maxcnt }} -C {{ hm_pgsql__process_name }}
{% for dbname in hm_pgsql__databases %}
{%- set dbid = dbname | replace('-', '_') %}
#
# Checks for database '{{ dbname }}'.
#
command[check_pg_con_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_connection --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }}
command[check_pg_bck_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_backends --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }}
command[check_pg_blt_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_bloat --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }} --warning='1G' --critical='5G'
command[check_pg_anl_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_last_analyze --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }} --warning='3d' --critical='7d'
command[check_pg_vac_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_last_vacuum --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }} --warning='3d' --critical='7d' 
command[check_pg_aan_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_last_autoanalyze --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }} --warning='3d' --critical='7d'
command[check_pg_ava_{{ dbid }}]={{ hm_monitored__plugins_dir }}/check_postgres_last_autovacuum --dbname={{ dbname }} --dbuser={{ hm_pgsql__monitoring_user }} --warning='3d' --critical='7d'
{% endfor %}